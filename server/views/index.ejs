<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PhotoRefine | Pro Image Editor</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <!-- Cropper.js -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>
</head>

<body>
    <div class="app-container">
        <header>
            <h1>Photo<span>Refine</span></h1>
            <div class="auth-controls" id="authControls">
                <a href="/login" class="secondary-btn btn-small" style="text-decoration:none">Login</a>
                <a href="/login" class="primary-btn btn-small" style="text-decoration:none">Register</a>
            </div>
            <div class="user-info hidden" id="userInfo">
                <img id="userAvatar" src="" class="hidden" alt="Avatar"
                    style="width:24px; height:24px; border-radius:50%; object-fit:cover;">
                <span id="userNameDisplay"></span>
                <button id="logoutBtn" class="secondary-btn btn-small logout-btn">
                    Logout
                </button>
            </div>
            <div class="sync-status" id="syncStatus">
                <i data-lucide="cloud-off"></i>
                <span>Offline Mode</span>
            </div>
            <p>Professional Image Processing Powered by HTML5 & Cloud</p>
        </header>

        <!-- Auth Modals Removed - See login.ejs -->

        <main>
            <div class="editor-layout">
                <aside class="history-panel">
                    <div class="panel-header">
                        <h3><i data-lucide="history"></i> Recent Edits</h3>
                        <button id="syncHistoryBtn" class="icon-btn-subtle" title="Sync Cloud History">
                            <i data-lucide="refresh-cw"></i>
                        </button>
                    </div>
                    <div id="historyList" class="history-list">
                        <div class="history-add-new" id="historyAddNew">
                            <i data-lucide="plus"></i>
                            <span>Add New</span>
                        </div>
                        <!-- History items will be injected here -->
                        <div class="empty-history">
                            <p>No recent edits yet</p>
                        </div>
                    </div>
                </aside>

                <div class="canvas-area">
                    <div class="canvas-wrapper">
                        <canvas id="mainCanvas"></canvas>
                        <div id="dropZone" class="drop-zone">
                            <span>Drop an image or click to upload</span>
                            <input type="file" id="imageInput" accept="image/*" class="hidden">
                        </div>
                    </div>
                </div>

                <div class="controls-panel">
                    <div class="control-group">
                        <h3>Presets</h3>
                        <div class="presets-grid">
                            <button class="preset-card active" data-preset="none">
                                <div class="preset-preview none"></div>
                                <span>Original</span>
                            </button>
                            <button class="preset-card" data-preset="bold">
                                <div class="preset-preview bold"></div>
                                <span>Bold</span>
                            </button>
                            <button class="preset-card" data-preset="vivid">
                                <div class="preset-preview vivid"></div>
                                <span>Vivid</span>
                            </button>
                            <button class="preset-card" data-preset="vintage">
                                <div class="preset-preview vintage"></div>
                                <span>Vintage</span>
                            </button>
                            <button class="preset-card" data-preset="bw">
                                <div class="preset-preview bw"></div>
                                <span>B&W</span>
                            </button>
                            <button class="preset-card" data-preset="cinematic">
                                <div class="preset-preview cinematic"></div>
                                <span>Cinematic</span>
                            </button>
                            <button class="preset-card" data-preset="golden">
                                <div class="preset-preview golden"></div>
                                <span>Golden</span>
                            </button>
                            <button class="preset-card" data-preset="teal">
                                <div class="preset-preview teal"></div>
                                <span>Teal & Orange</span>
                            </button>
                            <button class="preset-card" data-preset="moody">
                                <div class="preset-preview moody"></div>
                                <span>Moody</span>
                            </button>
                            <button class="preset-card" data-preset="dreamy">
                                <div class="preset-preview dreamy"></div>
                                <span>Dreamy</span>
                            </button>
                            <button class="preset-card" data-preset="highkey">
                                <div class="preset-preview highkey"></div>
                                <span>High Key</span>
                            </button>
                            <button class="preset-card" data-preset="gritty">
                                <div class="preset-preview gritty"></div>
                                <span>Gritty</span>
                            </button>
                            <button class="preset-card" data-preset="cold">
                                <div class="preset-preview cold"></div>
                                <span>Cold</span>
                            </button>
                            <button class="preset-card" data-preset="retro">
                                <div class="preset-preview retro"></div>
                                <span>Retro</span>
                            </button>
                            <button class="preset-card" data-preset="neon">
                                <div class="preset-preview neon"></div>
                                <span>Neon</span>
                            </button>
                        </div>
                    </div>

                    <div class="control-group">
                        <h3>Adjustments</h3>
                        <div class="slider-item">
                            <label for="brightness">
                                <span class="label-text"><i data-lucide="sun-medium"></i> Brightness</span>
                                <span class="value" id="brightnessVal">100%</span>
                            </label>
                            <input type="range" id="brightness" min="0" max="200" value="100">
                        </div>
                        <div class="slider-item">
                            <label for="contrast">
                                <span class="label-text"><i data-lucide="contrast"></i> Contrast</span>
                                <span class="value" id="contrastVal">100%</span>
                            </label>
                            <input type="range" id="contrast" min="0" max="200" value="100">
                        </div>
                        <div class="slider-item">
                            <label for="saturation">
                                <span class="label-text"><i data-lucide="droplets"></i> Saturation</span>
                                <span class="value" id="saturationVal">100%</span>
                            </label>
                            <input type="range" id="saturation" min="0" max="200" value="100">
                        </div>
                        <div class="slider-item">
                            <label for="blur">
                                <span class="label-text"><i data-lucide="eye"></i> Blur</span>
                                <span class="value" id="blurVal">0px</span>
                            </label>
                            <input type="range" id="blur" min="0" max="20" value="0">
                        </div>
                    </div>

                    <div class="control-group">
                        <h3>Tone</h3>
                        <div class="slider-item">
                            <label for="temperature">
                                <span class="label-text"><i data-lucide="thermometer"></i> Temperature</span>
                                <span class="value" id="temperatureVal">0</span>
                            </label>
                            <input type="range" id="temperature" min="-100" max="100" value="0">
                        </div>
                        <div class="slider-item">
                            <label for="tint">
                                <span class="label-text"><i data-lucide="palette"></i> Tint</span>
                                <span class="value" id="tintVal">0</span>
                            </label>
                            <input type="range" id="tint" min="-100" max="100" value="0">
                        </div>
                        <div class="slider-item">
                            <label for="highlights">
                                <span class="label-text"><i data-lucide="sun"></i> Highlights</span>
                                <span class="value" id="highlightsVal">0</span>
                            </label>
                            <input type="range" id="highlights" min="-100" max="100" value="0">
                        </div>
                        <div class="slider-item">
                            <label for="shadows">
                                <span class="label-text"><i data-lucide="moon"></i> Shadows</span>
                                <span class="value" id="shadowsVal">0</span>
                            </label>
                            <input type="range" id="shadows" min="-100" max="100" value="0">
                        </div>
                    </div>

                    <div class="control-group">
                        <h3>Details</h3>
                        <div class="slider-item">
                            <label for="sharpen">
                                <span class="label-text"><i data-lucide="zap"></i> Sharpen</span>
                                <span class="value" id="sharpenVal">0</span>
                            </label>
                            <input type="range" id="sharpen" min="0" max="100" value="0">
                        </div>
                    </div>

                    <div class="actions">
                        <button id="cropBtn" class="secondary-btn">
                            <i data-lucide="crop"></i> Crop Input Image
                        </button>
                    </div>

                    <div class="actions" id="cropActions" style="display: none; margin-bottom: 15px;">
                        <button id="cancelCropBtn" class="secondary-btn" style="flex: 1;">Cancel</button>
                        <button id="applyCropBtn" class="primary-btn" style="flex: 1;">Apply Crop</button>
                    </div>

                    <div class="actions" id="mainActions">
                        <button id="resetBtn" class="secondary-btn">Reset All</button>
                        <button id="downloadBtn" class="primary-btn">Download</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="/editor.js"></script>
    <script>
        // Lucide is initialized in editor.js via cloud.updateUI()
    </script>
</body>

</html>