<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PhotoRefine | Login</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body>
    <div class="login-page-container">
        <!-- Left Banner: Image Side -->
        <div class="login-left">
            <img src="/demo/demo1.jpg" alt="PhotoRefine Background">
            <div class="login-left-overlay">
                <div>
                    <h1>Photo<span style="color:var(--accent);">Refine</span></h1>
                    <p>Professional Image Processing Powered by HTML5 & Cloud</p>
                </div>
            </div>
        </div>

        <!-- Right Side: Auth Form -->
        <div class="login-right">
            <div class="login-form-wrapper">
                <div class="modal-header" style="border-bottom:none; padding-bottom: 0;">
                    <h2 id="modalTitle">Login to Cloud</h2>
                </div>

                <div class="auth-toggle">
                    <button id="tabLogin" class="auth-tab active">Login</button>
                    <button id="tabRegister" class="auth-tab">Register</button>
                </div>

                <div class="modal-body">
                    <button type="button" class="auth-google-btn" onclick="triggerGoogleLogin()">
                        <svg viewBox="0 0 24 24" width="20" height="20" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                                fill="#4285F4" />
                            <path
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                                fill="#34A853" />
                            <path
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                                fill="#FBBC05" />
                            <path
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                                fill="#EA4335" />
                        </svg>
                        <span>Sign in with Google</span>
                    </button>

                    <div class="auth-divider">
                        <span>OR</span>
                    </div>

                    <form id="authForm">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" id="username" required minlength="3" placeholder="Enter username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" required minlength="6" placeholder="Enter password">
                        </div>
                        <div id="authError" class="auth-error hidden"></div>
                        <button type="submit" id="submitAuthBtn" class="primary-btn w-full">Login</button>
                    </form>

                    <div style="margin-top: 1.5rem; text-align: center;">
                        <a href="/" class="secondary-btn btn-small" style="display:inline-flex; width:auto;"><i
                                data-lucide="arrow-left" style="margin-right: 5px;"></i> Back to Editor in Offline
                            Mode</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();

        // Auth Logic specifically for this page
        const authForm = document.getElementById('authForm');
        const modalTitle = document.getElementById('modalTitle');
        const authError = document.getElementById('authError');
        const tabLogin = document.getElementById('tabLogin');
        const tabRegister = document.getElementById('tabRegister');
        let isLoginMode = true;

        tabLogin.addEventListener('click', () => setMode(true));
        tabRegister.addEventListener('click', () => setMode(false));

        function setMode(loginMode) {
            isLoginMode = loginMode;
            if (loginMode) {
                tabLogin.classList.add('active');
                tabRegister.classList.remove('active');
            } else {
                tabRegister.classList.add('active');
                tabLogin.classList.remove('active');
            }
            modalTitle.textContent = loginMode ? 'Login to Cloud' : 'Register New Account';
            document.getElementById('submitAuthBtn').textContent = loginMode ? 'Login' : 'Register';
            authError.classList.add('hidden');
        }

        async function triggerGoogleLogin() {
            authError.classList.add('hidden');
            const btn = document.querySelector('.auth-google-btn');
            btn.disabled = true;
            btn.style.opacity = '0.7';

            try {
                const res = await fetch('/api/auth/google/url');
                const data = await res.json();
                if (data.url) {
                    window.location.href = data.url;
                } else {
                    authError.textContent = data.error || 'Failed to generate Google Login URL.';
                    authError.classList.remove('hidden');
                    btn.disabled = false;
                    btn.style.opacity = '1';
                }
            } catch (err) {
                authError.textContent = 'Server connection error. Please try again.';
                authError.classList.remove('hidden');
                btn.disabled = false;
                btn.style.opacity = '1';
            }
        }

        authForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const btn = document.getElementById('submitAuthBtn');

            btn.disabled = true;
            btn.textContent = 'Please wait...';
            authError.classList.add('hidden');

            try {
                const endpoint = isLoginMode ? '/api/login' : '/api/register';
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    localStorage.setItem('photo_refine_user', JSON.stringify({ id: data._id, username: data.username }));
                    localStorage.setItem('photo_refine_token', data.token);
                    window.location.href = '/';
                } else {
                    authError.textContent = data.error || 'Authentication failed';
                    authError.classList.remove('hidden');
                }
            } catch (err) {
                authError.textContent = 'Network error occurred';
                authError.classList.remove('hidden');
            } finally {
                btn.disabled = false;
                btn.textContent = isLoginMode ? 'Login' : 'Register';
            }
        });
    </script>
</body>

</html>